<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="{{ asset('/images/list.svg') }}" type="image/svg+xml"/>

    <title>{% block title %}My Agenda{% endblock %}</title>

    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200;400;600;800&display=swap" rel="stylesheet" />
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<header class="header">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_homepage') }}">
                <img src="{{ asset('images/list.svg') }}" alt="" width="32" height="32" title="Accueil My Agenda">
            </a>

            {% block frontBack %}
                <a class="navbar-brand" href="{{ path('app_homepage') }}">My Agenda</a>
            {% endblock %}

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExample07">
                <ul class="navbar-nav mr-auto">
                </ul>
                <ul class="navbar-nav">
                    {% if is_granted('ROLE_USER') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown07" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">Bienvenue {{ app.user.pseudo }}</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown07">
                            <a class="dropdown-item" href="{{ path('app_backoffice') }}">Mon compte</a>
                            <a class="dropdown-item" href="{{ path('agenda_backoffice')}}">Mes événements</a>
                            <a class="dropdown-item" href="{{ path('agenda_new') }}">Nouvel événement</a>
                            <a class="dropdown-item" href="{{ path('app_logout')}}">Se déconnecter</a>
                        </div>
                    </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">S'identifier</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">Créer un compte</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="container mt-5">
    {% block body %}{% endblock %}
</main>

<footer class="mt-7 px-3 py-5 text-center text-muted">
    <p>
        Réalisation : Kévin PAULMIER le 09/04/2020 (Partiel de PHP en 7h à l'ISFAC de Poitiers)
    </p>
</footer>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
